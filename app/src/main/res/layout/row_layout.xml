<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/backgroundColor"
        android:gravity="center|center_horizontal"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.07999998" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navbar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/backgroundColor"
        android:foreground="@drawable/navbar"
        app:itemIconTint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="50dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="665dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="#A9A9A9"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <HorizontalScrollView
            android:id="@+id/horizontalScroll"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="132dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/album3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/songName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="song name"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/bandName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="band name"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <ImageButton
                        android:id="@+id/star1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:adjustViewBounds="true"
                        android:background="#A9A9A9"
                        android:scaleType="fitCenter"
                        android:src="@drawable/star" />

                    <ImageButton
                        android:id="@+id/twitter2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:adjustViewBounds="true"
                        android:background="#A9A9A9"
                        android:scaleType="fitXY"
                        android:src="@drawable/twitter" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="132dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/album1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/songName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="song name"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/bandName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="band name"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <ImageButton
                        android:id="@+id/star2"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:adjustViewBounds="true"
                        android:background="#A9A9A9"
                        android:scaleType="fitCenter"
                        android:src="@drawable/star" />

                    <ImageButton
                        android:id="@+id/twitter3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:adjustViewBounds="true"
                        android:background="#A9A9A9"
                        android:scaleType="fitXY"
                        android:src="@drawable/twitter" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="132dp"
                    android:layout_height="120dp"

                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/album2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/songName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="song name"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/bandName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="band name"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <ImageButton
                        android:id="@+id/star3"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:adjustViewBounds="true"
                        android:background="#A9A9A9"
                        android:scaleType="fitCenter"
                        android:src="@drawable/star" />

                    <ImageButton
                        android:id="@+id/twitter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:adjustViewBounds="true"
                        android:background="#A9A9A9"
                        android:scaleType="fitXY"
                        android:src="@drawable/twitter" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="132dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/album2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/songName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="song name"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/bandName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="band name"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <ImageButton
                        android:id="@+id/star4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:adjustViewBounds="true"
                        android:background="#A9A9A9"
                        android:scaleType="fitCenter"
                        android:src="@drawable/star" />

                    <ImageButton
                        android:id="@+id/twitter4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:adjustViewBounds="true"
                        android:background="#A9A9A9"
                        android:scaleType="fitXY"
                        android:src="@drawable/twitter" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/artist1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/artist1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="113dp"
                android:layout_height="80dp"
                android:layout_marginStart="50dp"
                android:text="Snoop Dogg's new release"
                android:textColor="#020202"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="401dp"
            android:layout_height="83dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/artist2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/artist4" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="113dp"
                android:layout_height="80dp"
                android:layout_marginStart="50dp"
                android:text="New Playlist From Taylor Swift"
                android:textColor="#020202"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/artist3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/artist3" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="113dp"
                android:layout_height="80dp"
                android:layout_marginStart="50dp"
                android:text="Recommended playlist for you!"
                android:textColor="#020202"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/artist5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/artist2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="113dp"
                android:layout_height="80dp"
                android:layout_marginStart="50dp"
                android:text="Snoop Dogg's new release"
                android:textColor="#020202"
                android:textSize="15sp" />

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/backgroundColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider2"
            app:layout_constraintVertical_bias="1.0">

            <Button
                android:id="@+id/feed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|end"
                android:layout_marginEnd="25dp"
                android:background="@color/backgroundColor"
                android:foreground="@drawable/headset"
                android:foregroundGravity="fill"
                android:gravity="center"
                android:textColor="#0A0A0A" />

            <Button
                android:id="@+id/button5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal"
                android:background="@color/backgroundColor"
                android:foreground="@drawable/home"
                android:foregroundGravity="fill"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|start"
                android:layout_marginStart="25dp"
                android:background="@color/backgroundColor"
                android:foreground="@drawable/compass"
                android:includeFontPadding="false" />

            <View
                android:id="@+id/divider5"
                android:layout_width="409dp"
                android:layout_height="1dp"
                android:background="#000000" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29000002" />

    <View
        android:id="@+id/divider4"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.58000004" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.44" />

    <View
        android:id="@+id/divide6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.71000004" />
</androidx.constraintlayout.widget.ConstraintLayout>